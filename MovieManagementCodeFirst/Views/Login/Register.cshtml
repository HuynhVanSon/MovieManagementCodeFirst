@using MovieManagementCodeFirst.Models
@model Customer

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_emptyLayout.cshtml";
}
<div class="login">
    @using (Html.BeginForm("PostRegister", "Login", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <h1>Đăng ký tài khoản miễn phí</h1>

        @Html.TextBoxFor(model => model.Name, new { @placeholder = " Tên của bạn *" })
        @Html.ValidationMessageFor(model => model.Name)

        @Html.TextBoxFor(model => model.IDCard, new { @placeholder = " Số CMND *" })
        @Html.ValidationMessageFor(model => model.IDCard)

        @Html.DropDownListFor(model => model.Genders, new SelectList(Enum.GetValues(typeof(Gender))), "Giới tính *")
        @Html.ValidationMessageFor(model => model.Genders)

        @Html.TextBoxFor(model => model.DateOfBirth, new { @placeholder = " Ngày sinh" })
        @Html.ValidationMessageFor(model => model.DateOfBirth)

        @Html.TextBoxFor(model => model.PhoneNumber, new { @placeholder = " Số điện thoại *" })
        @Html.ValidationMessageFor(model => model.PhoneNumber)

        @Html.TextBoxFor(model => model.Email, new { @placeholder = " Email *" })
        @Html.ValidationMessageFor(model => model.Email)

        @Html.TextBoxFor(model => model.Account.UserName, new { @placeholder = " Tài khoản *" })
        @Html.ValidationMessageFor(model => model.Account.UserName)

        @Html.TextBoxFor(model => model.Account.Password, new { @placeholder = " Mật khẩu *" })
        @Html.ValidationMessageFor(model => model.Account.Password)

        @Html.TextBoxFor(model => model.Account.ConfirmPassword, new { @placeholder = " Xác nhận mật khẩu *" })
        @Html.ValidationMessageFor(model => model.Account.ConfirmPassword)

        <button type="submit" class="btn btn-primary btn-block btn-large">Đăng ký</button>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/index")
    <script src="@Url.Content("~/Scripts/index.js")" type="text/javascript"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js" type="text/javascript"></script>
}

