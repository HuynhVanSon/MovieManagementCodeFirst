@using MovieManagementCodeFirst.Models
@model Account

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_emptyLayout.cshtml";
}
<div class="login">
    @using (Html.BeginForm("CheckLogin", "Login", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <h1>Đăng nhập để mua vé!</h1>

        @Html.TextBoxFor(model => model.UserName, new { @placeholder = " Tài khoản *" })
        @Html.ValidationMessageFor(model => model.UserName)

        @Html.TextBoxFor(model => model.Password, new { @placeholder = " Mật khẩu *" })
        @Html.ValidationMessageFor(model => model.Password)

        <p class="forgot"><a href="#">Quên mật khẩu?</a></p>

        <button type="submit" class="btn btn-primary btn-block btn-large">Đăng nhập</button>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/index")
    <script src="@Url.Content("~/Scripts/index.js")" type="text/javascript"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js" type="text/javascript"></script>
}
