@using MovieManagementCodeFirst.Models
@model IEnumerable<Film>

@{
    ViewBag.Title = "Thể Loại Phim";
}
<div class="content">
    <div class="product_wrapper1">

        @{
            List<Film> listRecent = Model.Take(4).ToList();
        }
        <div class="title_all">
            <span>@ViewBag.FilmType</span>
            <img class="vien" src="@Url.Content("~/Content/icon/ngan.png")" width="638px" height="8px" />
            <a href="#"><img class="ten" src="@Url.Content("~/Content/icon/continue.png")" /></a>
            <a href="#"><img class="ten" src="@Url.Content("~/Content/icon/back.png")" /></a>
        </div><div class="clr"></div>
        <ul class="product_ul">
            @foreach (var item in listRecent)
            {
                <li class="product_li">
                    <img class="img_product" src="@Url.Content(item.Image)" />
                    <div class="product_div">

                        <span class="name_product">@item.Name</span><span class="by">By @item.Director</span><br />
                        <span class="decription">
                            @item.Description
                        </span>
                        <span class="gia">@item.Tickets.Where(t => t.ID == 1).SingleOrDefault().Price đ</span>
                        <a href="#"><img class="add" src="@Url.Content("~/Content/icon/add_cart.png")" /></a>
                    </div>
                </li>
            }
        </ul><div class="clr"></div>

    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/index")
    <script src="@Url.Content("~/Scripts/jquery-slider.js")" type="text/javascript"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/wowslider.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/script.js")"></script>
