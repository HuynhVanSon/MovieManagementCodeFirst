@using MovieManagementCodeFirst.Models
@model IEnumerable<Film>

@{
    ViewBag.Title = "Home Page";
}

<div class="content">
    <div class="intro_wrapper">
        <img class="ngan" src="@Url.Content("~/Content/icon/ngan.png")" width="100%" />
        <center><span class="wel">Chào mừng bạn đã đến với <span class="red_text">PS cinema,</span> đặt vé phim online</span></center>
        <img class="ngan" src="@Url.Content("~/Content/icon/ngan.png")" width="100%" />
        <div class="intro">
            <ul>
                <li class="intro1">
                    <img src="@Url.Content("~/Content/icon/intro-trust.png")" />
                    <span class="intro_text1">Đáng tin cậy</span>
                    <p>
                        Làm việc bảo mật và có trách nhệm,
                        chúng tôi mang đến cho bạn niềm tin.
                    </p>
                </li>
                <li class="intro2">
                    <img src="@Url.Content("~/Content/icon/intro-easy.png")" />
                    <span class="intro_text1">Dể dàng</span>
                    <p>
                        Động ngũ làm việc nhiệt tình và một trang
                        web thân thiện, mua vé xem phim một cách dể dàng.
                    </p>
                </li>
                <li class="intro3">
                    <img src="@Url.Content("~/Content/icon/intro-fast.png")" />
                    <span class="intro_text3">Nhanh chóng</span>
                    <p>
                        Giao dịch online gọn nhẹ, Kết hợp với
                        chứng minh thư, bạn sex không còn lo mất vé.
                    </p>
                </li>
            </ul>
        </div>
    </div><div class="clr"></div>
    <div class="product_wrapper1">

        @{
            List<Film> listRecent = Model.Take(4).ToList();
        }
        <div class="title_all">
            <span>FILM GẦN ĐÂY</span>
            <img class="vien" src="@Url.Content("~/Content/icon/ngan.png")" width="638px" height="8px" />
            <a href="#"><img class="ten" src="@Url.Content("~/Content/icon/continue.png")" /></a>
            <a href="#"><img class="ten" src="@Url.Content("~/Content/icon/back.png")" /></a>
        </div><div class="clr"></div>
        <ul class="product_ul">
            @foreach (var item in listRecent)
            {
                <li class="product_li">
                    <img class="img_product" src="@Url.Content(item.Image)" />
                    <div class="product_div">

                        <span class="name_product">@item.Name</span><span class="by">By @item.Director</span><br />
                        <span class="decription">
                            @item.Description
                        </span>
                        <span class="gia">@item.Tickets.Where(t => t.ID == 1).SingleOrDefault().Price đ</span>
                        <a href="#"><img class="add" src="@Url.Content("~/Content/icon/add_cart.png")" /></a>
                    </div>
                </li>
            }
        </ul><div class="clr"></div>

    </div>
    <div class="product_wrapper1">
        @{
            List<Film> listGoodSale = Model.Where(f => f.Tickets.Where(t => t.TicketType.ID == 1).SingleOrDefault().Orders.Count > 100).Take(4).ToList();
        }

        <div class="title_all">
            <span>VÉ PHIM BÁN CHẠY</span>
            <img class="vien" src="@Url.Content("~/Content/icon/ngan.png")" width="638px" height="8px" />
            <a href="#"><img class="ten" src="@Url.Content("~/Content/icon/continue.png")" /></a>
            <a href="#"><img class="ten" src="@Url.Content("~/Content/icon/back.png")" /></a>
        </div><div class="clr"></div>
        <ul class="product_ul">
            @foreach (var item in listGoodSale)
            {
                <li class="product_li">
                    <div class="img_product" style="background-image: url('@Url.Content(item.Image)')">
                        <a href="#"><img class="sale" src="@Url.Content("~/Content/icon/sale.png")" /></a>
                    </div>

                    <div class="product_div">

                        <span class="name_product">@item.Name</span><span class="by">By @item.Director</span><br />
                        <span class="decription">
                            @item.Description
                        </span>
                        <span class="gia">@item.Tickets.Where(t => t.ID == 1).SingleOrDefault().Price đ</span>
                        <a href="#"><img class="add" src="@Url.Content("~/Content/icon/add_cart.png")" /></a>
                    </div>
                </li>
            }

        </ul><div class="clr"></div>
    </div>
